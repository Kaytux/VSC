<Window x:Class="VuesVSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VuesVSC"
        mc:Ignorable="d"
        Title="Vampire Survivors Compagnon" Icon="Images/icon.png" Height="500" Width="800" MinHeight="500" MinWidth="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource FontVSC}"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource FontVSC}"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <DockPanel.Background >
            <ImageBrush Opacity="0.9" Stretch="UniformToFill" AlignmentY="Top" AlignmentX="Center" ImageSource="Images/introBG.png"/>
        </DockPanel.Background>
        <Grid DockPanel.Dock="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button Background="Transparent" MaxWidth="40" Margin="10" BorderBrush="Transparent" Click="Button_Click_1">
                <Image Source="Images/icon.png"></Image>
            </Button>
            
            <Button FontFamily="{StaticResource FontVSC}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Click="Button_Click">Armes</Button>
            
            <Button Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_2">Personnages</Button>
            
            <Button Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_4">Cartes</Button>
            
            <Button Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_5">Enemies</Button>
    
            <Button Grid.Column="5" VerticalAlignment="Center" Click="Button_Click_3"   Background="Transparent" BorderBrush="Transparent">
                <ContentControl x:Name="contentControlConnexion">
                    <local:UCConnecte></local:UCConnecte>
                </ContentControl>
            </Button>
        </Grid>
        <ContentControl x:Name="contentControl">
            <local:UCMainPage></local:UCMainPage>
        </ContentControl>

    </DockPanel>
</Window>
