<Window x:Class="VuesVSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VuesVSC"
        mc:Ignorable="d"
        Title="Vampire Survivors Compagnon" Icon="Images/icon.png" Height="500" Width="800" MinHeight="500" MinWidth="800">
    
    <DockPanel>
        <DockPanel.Background >
            <ImageBrush Stretch="UniformToFill" AlignmentY="Top" AlignmentX="Center" ImageSource="Images/introBG.png"/>
        </DockPanel.Background>
        <Grid DockPanel.Dock="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource MenuButton}" Height="50" Margin="5" Padding="0" Click="Button_Click_1">
                <Image Source="Images/icon.png"></Image>
            </Button>
            <Button Grid.Column="1" Style="{StaticResource MenuButton}" Click="Button_Click">
                <TextBlock Style="{StaticResource MenuText}" Background="Transparent">Armes</TextBlock>
            </Button>
            <Button Grid.Column="2" Style="{StaticResource MenuButton}" Click="Button_Click_2">
                <TextBlock Style="{StaticResource MenuText}" Background="Transparent">Personnages</TextBlock>
            </Button>
            <Button Grid.Column="3" Style="{StaticResource MenuButton}" Click="Button_Click_4">
                <TextBlock Style="{StaticResource MenuText}" Background="Transparent">Cartes</TextBlock>
            </Button>
            <Button Grid.Column="4" Style="{StaticResource MenuButton}" Click="Button_Click_5">
                <TextBlock Style="{StaticResource MenuText}" Background="Transparent">Enemies</TextBlock>
            </Button>
            <Button Grid.Column="5" Style="{StaticResource MenuButton}" Click="Button_Click_3">
                <ContentControl x:Name="contentControlConnexion">
                    <local:UCConnecte></local:UCConnecte>
                </ContentControl>
            </Button>
        </Grid>
        <ContentControl x:Name="contentControl">
            <local:UCMainPage></local:UCMainPage>
        </ContentControl>

    </DockPanel>
</Window>
