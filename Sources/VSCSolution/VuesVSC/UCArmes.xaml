<UserControl x:Class="VuesVSC.UCArmes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VuesVSC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Background="DarkRed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Background="Transparent" BorderBrush="Transparent" Click="Button_Click">Armes Actives</Button>
                    <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_1">Armes Passsives</Button>
                    <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_2">Améliorations</Button>
                    <Button Grid.Column="3" Background="Transparent" BorderBrush="Transparent" Click="Button_Click_3">Récap</Button>
                </Grid>
                <Rectangle Height="3" Fill="Black"></Rectangle>
            </StackPanel>
            <ContentControl x:Name="contentControl">
                <local:UCArmesActives></local:UCArmesActives>
            </ContentControl>

        </DockPanel>
    </Grid>
</UserControl>
