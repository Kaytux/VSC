<UserControl x:Class="VuesVSC.UCArmePassive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VuesVSC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" Margin="10">Bracer</TextBlock>
            <Image Source="Images/Sprite-Bracer.png" MaxWidth="40"></Image>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBlock HorizontalAlignment="Center" Margin="10">Hollow Heart</TextBlock>
            <Image Source="Images/Sprite-Hollow_Heart.png" MaxWidth="40"></Image>
        </StackPanel>
        <StackPanel Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" Margin="10">Empty Tome</TextBlock>
            <Image Source="Images/Sprite-Empty_Tome.png" MaxWidth="40"></Image>
        </StackPanel>
    </Grid>

</UserControl>
