<UserControl x:Class="VuesVSC.UCCartes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VuesVSC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock Margin="20" DockPanel.Dock="Top">Nom carte</TextBlock>
        <TextBox Margin="20" MinHeight="100" DockPanel.Dock="Bottom">Notes pour la page:</TextBox>
        <Image Margin="20" MaxWidth="400" DockPanel.Dock="Left" Source="Images/icon.png"/>
        <TextBlock Margin="20" Background="Red">Texte</TextBlock>
    </DockPanel>
</UserControl>
